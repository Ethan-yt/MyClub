<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <import type="com.ethan.myclub.global.Preferences"/>


        <variable
            name="viewModel"
            type="com.ethan.myclub.user.main.viewmodel.UserViewModel"/>

        <variable
            name="profile"
            type="com.ethan.myclub.user.info.model.Profile"/>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/ll_username_wrapper"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_user"/>

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="64dp"
                    android:transitionName="trans_iv_avatar"
                    app:imageUrl="@{profile.avatarThumbnailUrl ?? null}"/>


                <LinearLayout
                    android:id="@+id/ll_username_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_avatar"
                    android:layout_centerHorizontal="true"
                    android:padding="15dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@{profile.username}"
                        android:textColor="#ff545454"
                        android:textSize="12sp"
                        android:visibility="@{Preferences.sIsLogin ? View.VISIBLE : View.GONE}"
                        tools:text="你好"
                        tools:visibility="visible"/>

                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:duplicateParentState="false"
                        android:text="@{profile.nickname}"
                        android:textColor="#ff545454"
                        android:textSize="15sp"
                        android:visibility="@{Preferences.sIsLogin ? View.VISIBLE : View.GONE}"
                        tools:text="你好"
                        tools:visibility="visible"/>

                    <TextView
                        android:id="@+id/tv_loginBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{()->viewModel.login()}"
                        android:text="点击登录"
                        android:textColor="#0900b9"
                        android:textSize="15sp"
                        android:visibility="@{!Preferences.sIsLogin ? View.VISIBLE : View.GONE}"
                        tools:visibility="visible"/>

                </LinearLayout>


            </RelativeLayout>

            <include
                layout="@layout/item_user_info"
                bind:viewModel="@{viewModel}"/>
        </LinearLayout>
    </FrameLayout>


</layout>