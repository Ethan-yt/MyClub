<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.ethan.myclub.user.login.LoginActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_chevron_left_white_32dp"
        android:background="@color/colorPrimary"
        app:titleTextColor="#FFFFFF"
        android:theme="@style/AppTheme"
        app:title="时间管理"/>
    <android.support.v7.widget.CardView
        android:id="@+id/cv_input"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_login"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/btn_login"
        app:layout_constraintLeft_toLeftOf="@+id/btn_login"
        android:layout_marginBottom="24dp"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="台湾"
                android:textSize="24sp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:textColor="?attr/colorAccent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="国家和地区"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toTopOf="@+id/textView3"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"/>

            <TextView
                android:id="@+id/tv_country_code"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                tools:text="86"
                app:layout_constraintLeft_toLeftOf="@+id/tv_country"
                app:layout_constraintTop_toTopOf="@+id/et_phone_number"
                app:layout_constraintBottom_toBottomOf="@+id/et_phone_number"/>

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_height="wrap_content"
                android:hint="手机号码"
                android:layout_width="0dp"
                app:layout_constraintRight_toRightOf="@+id/textView3"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintLeft_toRightOf="@+id/tv_country_code"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@id/btn_login"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorPrimary"
        android:onClick="onLogin"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_width="0dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/cv_input"
            android:text="发送短信"
            android:textAlignment="center"
            android:textSize="25sp"

            />
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
