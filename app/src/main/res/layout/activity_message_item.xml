<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/clubPhoto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/avarat_small_bg"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="10dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />


    <TextView
        android:id="@+id/clubName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="视传1404袁泉"
        android:textSize="17sp"
        android:textColor="@color/smssdk_black"
        app:layout_constraintTop_toTopOf="@+id/clubPhoto"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/clubPhoto"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/motto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:gravity="center_vertical"
        android:text="笨笨笨"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/clubName"
        tools:layout_conversion_absoluteHeight="15dp"
        tools:layout_conversion_absoluteWidth="230dp"
        tools:layout_conversion_absoluteX="80dp"
        tools:layout_conversion_absoluteY="55dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/clubName" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="58dp"
        android:layout_height="17dp"
        android:text="下午9:42"
        android:textSize="13dp"
        app:layout_constraintTop_toTopOf="@+id/clubName"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
